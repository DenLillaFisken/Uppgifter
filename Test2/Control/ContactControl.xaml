<UserControl x:Class="Test2.Control.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test2.Control"
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="contactImage" Grid.Column="0" Height="60" Width="60"/>

        <StackPanel Grid.Column="1" VerticalAlignment="center" Margin="10,0,0,0">
            <TextBlock x:Name="contactName"  Margin="0,0,0,10" />
            <TextBlock x:Name="contactRole"  FontSize="8" Foreground="Coral"/>
        </StackPanel>
    </Grid>
</UserControl>
